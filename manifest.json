{
  "manifest_version": 2,
  "name": "Imgs",
  "version": "1.0",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["contextMenus", "<all_urls>"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "imgs@pandadev.net"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "popup.js"],
      "run_at": "document_start"
    }
  ],
  "commands": {
    "save_media": {
      "suggested_key": {
        "default": "Alt+S"
      },
      "description": "Save hovered media"
    }
  }
}
