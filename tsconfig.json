{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types"],
    "lib": ["DOM", "ES2020"],
    "moduleResolution": "node"
  },
  "include": ["src/*"],
  "exclude": ["node_modules", "dist"]
} 